---
const { arrayList = [], title } = Astro.props;
---

<section>
  <h4 class="font-semibold text-xl ">{title}</h4>
  <ul class="mt-3 flex flex-wrap gap-2">
    {
      arrayList.map((item: string) => (
        <li class="rounded-lg px-3 py-1 text-sm bg-background transition-transform duration-200 hover:-translate-y-0.5">
          {item}
        </li>
      ))
    }
  </ul>
</section>
