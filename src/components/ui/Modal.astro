---
const { id, title } = Astro.props;
---

<div
  role="dialog"
  aria-modal="true"
  aria-labelledby="modal-title"
  id={id}
  popover
  aria-labelledby="modal"
  class="card !bg-modal p-8 w-[min(90vw,32rem)] m-auto
          opacity-0 translate-y-2 transition duration-200 ease-out
          [transition-behavior:allow-discrete]
          [&:popover-open]:opacity-100 [&:popover-open]:translate-y-0"
>
  <header class="flex justify-between items-center mb-4">
    <h2 class="text-3xl font-bold font-headings text-detail">
      {title}
    </h2>
    <button
      popovertarget={id}
      popovertargetaction="hide"
      aria-label="Close"
      class="p-3 text-2xl hover:text-detail cursor-pointer">âœ•</button
    >
  </header>

  <slot />
</div>

<style is:global>
  @starting-style {
    #contact-modal:popover-open {
      opacity: 0;
      transform: translateY(0.5rem);
    }
  }
</style>
